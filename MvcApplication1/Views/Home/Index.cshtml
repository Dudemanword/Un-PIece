<!DOCTYPE html>
@{
    Layout = "";
}
<html ng-app="unPiece">
<head>
    <base href="@Url.Content("~")" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")
    @*<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="~/Content/normalize.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @*<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.js"></script>*@
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    @*<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular-animate.js"></script>*@
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.14.3.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>

    @Styles.Render("~/Content/themes/treviso")
</head>
<body class="body">
    <nav class="navbar navbar-default navbar-fixed-top">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" ng-init="navCollapsed = true" ng-click="navCollapsed = !navCollapsed">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#/home">Straw Hat</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" ng-class="!navCollapsed && 'in'" ng-controller="NavbarController">
            <ul class="nav navbar-nav">
                <li ng-class="{active: isActive('/home')}"><a href="#/home">Home</a></li>
                <li ng-class="{active: isActive('/videos')}"><a href="#/videos">Videos</a></li>
                <li ng-class="{active: isActive('/blogs')}"><a href="#/blogs">Blogs</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
    <div class="home hero">
        <div class="herowrapper">
        </div>
    </div>
    <script src="~/Scripts/Shared/NavbarController.js"></script>
    <script src="~/Scripts/home/HomeController.js"></script>
    <script src="~/Scripts/home/VideoController.js"></script>
    <script src="~/Scripts/home/BlogController.js"></script>
    <div class="mainsection">
        <div class="fade" ng-view> </div>
    </div>



</body>
</html>
